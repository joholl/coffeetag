[Unit]
Description=docker coffeebuddy database
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
RestartSec=10s
NotifyAccess=all

ExecStart=/usr/bin/docker start --attach coffeebuddydb
ExecStop=/usr/bin/docker stop --time 5 coffeebuddydb

[Install]
WantedBy=multi-user.target
